#:import vibrator plyer.vibrator
<ActionMenuLayout>:
    rows: 4
    cols: 3

    Button:
        background_normal: ''
        background_color: [10, 100, 205, 0.5]
        on_release: root.item_label.set_text("YES pressed")
        on_press: root.vibrate(0.5)
#on_press: vibrator.vibrate(0.5)
        Image:
            source: './images/yes.png'
            x: self.parent.x
            y: self.parent.y
            size: self.parent.width, self.parent.height
            allow_stretch: True
    Button:
        on_release: root.item_label.set_text("LEFT ARROW pressed")
        on_press: root.vibrate(0.5)
